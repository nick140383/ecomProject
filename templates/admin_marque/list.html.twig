{% extends 'admin/base.html.twig' %}

{% block title %}liste des Marques!{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des marques</h1>
    <table class="table table-hover">
        <thread>
            <tr>
                <th>Id</th>
                <th>nom</th>
             

                <th>Actions</th>
                <th>     <a href=" {{ path('admin_marque') }}">ajouter nouvelle marque</a></th>


                <th></th>
            </tr>
        </thread>
        <tbody>

        {% for marque in marques %}


        <tr>
            <td>{{ marque.id }}</td>
            <td>{{ marque.nom }}
          




            <td>

                <a href="{{ path('marque_edit',{'id':marque.id}) }}" class="btn btn-primary"><i
                            class="fas fa-edit"></i></a>
                <a href="{{ path('marque_edit',{'id':marque.id}) }}" class="btn btn-danger"><i
                            class="fas fa-trash"></i></a>
            </td>
        </tr>
    {% endfor %}

{% endblock %}