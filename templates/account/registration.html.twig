{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <h2>Inscription sur le site</h2>
    <div class="container">
        {{ form_start(form) }}
        {{ form_row(form.nom, {'label': 'Nom','attr': {'placeholder': 'Votre nom...'}}) }}
        {{ form_row(form.prenom, {'label': 'Prenom','attr': {'placeholder': 'Votre prenom...'}}) }}
        {{ form_row(form.sexe, {'label': 'Sexe', 'attr': {'placeholder': 'Votre sexe...'}}) }}
        {{ form_row(form.adresse, {'label': 'Adresse', 'attr': {'placeholder': 'Votre adresse...'}}) }}
        {{ form_row(form.email, {'label': 'Adresse email','attr': {'placeholder': 'Votre email...'}}) }}
        {{ form_row(form.motDePasse, {'label': 'Mot de passe', 'attr': {'placeholder': 'Votre mot de passe...'}}) }}
        {{ form_row(form.confirmation_mdp, {'label': 'Confirmation du mot de passe', 'attr': {'placeholder': 'Répétez votre mot de passe'}}) }}
        {{ form_row(form.ville, {'label': 'Sélectionnez la ville', 'attr': {'placeholder' : 'Votre ville...'}})}}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-success pull-right">Inscription</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
